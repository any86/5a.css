.a-radio {
  box-sizing: content-box;
  display: inline-flex;
  border-radius: 24px;
  overflow: hidden;
  transition: all 200ms;
  height: 24px;
  width: 24px;
  border: 1px solid #dee2e6;
  background-color: #fff; }
  .a-radio:after {
    content: '';
    margin: auto;
    display: block;
    border-radius: 12px;
    height: 12px;
    width: 12px;
    transition: transform 200ms;
    transform: scale(0);
    background-color: #3190ff; }
  .a-radio--checked {
    z-index: 1;
    border-color: #3190ff; }
    .a-radio--checked:after {
      transform: scale(1); }
  .a-radio--disabled {
    background-color: #e9ecef;
    border-color: #dee2e6; }
    .a-radio--disabled:after {
      background-color: #ced4da; }
